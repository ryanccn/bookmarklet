{
  "compilerOptions": {
    "module": "ES2020",
    "lib": ["ES2021", "DOM", "DOM.Iterable"],
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "/@/*": ["src/*"]
    }
  },

  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
